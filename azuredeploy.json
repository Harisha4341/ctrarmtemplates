{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "publicIPAddresses_domainNameLabel": {
      "type": "SecureString",
      "defaultValue": "pipdomainnamelabel"
    },
    "PublicIPAddresses_name": {
      "defaultValue": "publicIp1",
      "type": "String"
    },
    "virtualNetworks_bedrockvnet2_name": {
      "defaultValue": "bedrockterraformvnet2",
      "type": "String"
    },
    "agwVirtualNetwork_name": {
      "defaultValue": "agwVirtualNetwork",
      "type": "String"
    },
    "ApplicationGateway_name": {
      "defaultValue": "Appgateway",
      "type": "String"
    },
    "applicationGateways_ApplicationGateway2_name": {
      "defaultValue": "ApplicationGateway2",
      "type": "String"
    },
    "agwVirtualNetwork2Subnet1Name": {
      "defaultValue": "appgwsubnet",
      "type": "String"
    },
    "agwVirtualNetwork2Subnet1Prefix": {
      "defaultValue": "15.1.0.0/16",
      "type": "String"
    }
  },
  "variables": {
    "agwVirtualNetwork2Prefix": "15.0.0.0/8",
    "bedrockterraformvnet2Prefix": "10.0.0.0/16",
    "bedrockterraformvnet2Subnet1Name": "bedrockterraformclust2-aks-subnet",
    "bedrockterraformvnet2Subnet1Prefix": "10.0.0.0/24"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-11-01",
      "name": "[parameters('PublicIPAddresses_name')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "ipAddress": "52.179.251.210",
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Dynamic",
        "idleTimeoutInMinutes": 4,
        "dnsSettings": {
          "domainNameLabel": "[parameters('publicIPAddresses_domainNameLabel')]"
        },
        "ipTags": []
      }
    },

    {
      "name": "[parameters('agwVirtualNetwork_name')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_bedrockvnet2_name'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "15.0.0.0/8"
          ]
        },
        "dhcpOptions": {
          "dnsServers": []
        },
        "subnets": [
          {
            "name": "[parameters('agwVirtualNetwork2Subnet1Name')]",
            "properties": {
              "addressPrefix": "15.1.0.0/16",
              "delegations": [],
              "privateEndpointNetworkPolicies": "Enabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          }
        ],
        "virtualNetworkPeerings": [
          {
            "name": "peer_AGW-AKS",
            "properties": {
              "peeringState": "Connected",
              "remoteVirtualNetwork": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_bedrockvnet2_name'))]"
              },
              "allowVirtualNetworkAccess": false,
              "allowForwardedTraffic": false,
              "allowGatewayTransit": false,
              "useRemoteGateways": false,
              "remoteAddressSpace": {
                "addressPrefixes": [
                  "10.10.0.0/16"
                ]
              }
            }
          }
        ],
        "enableDdosProtection": false,
        "enableVmProtection": false
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-11-01",
      "name": "[parameters('virtualNetworks_bedrockvnet2_name')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('agwVirtualNetwork_name'))]"
      ],
      "tags": {
        "environment": "azure-simple"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.10.0.0/16"
          ]
        },
        "dhcpOptions": {
          "dnsServers": []
        },
        "subnets": [
          {
            "name": "bedrockterraformclust2-aks-subnet",
            "properties": {
              "addressPrefix": "10.10.1.0/24",
              "serviceEndpoints": [],
              "delegations": [],
              "privateEndpointNetworkPolicies": "Enabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          }
        ],
        "virtualNetworkPeerings": [
          {
            "name": "peer_AKS-AGW",
            "properties": {
              "peeringState": "Connected",
              "remoteVirtualNetwork": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('agwVirtualNetwork_name'))]"
              },
              "allowVirtualNetworkAccess": false,
              "allowForwardedTraffic": false,
              "allowGatewayTransit": false,
              "useRemoteGateways": false,
              "remoteAddressSpace": {
                "addressPrefixes": [
                  "15.0.0.0/8"
                ]
              }
            }
          }
        ],
        "enableDdosProtection": false,
        "enableVmProtection": false
      }
    },
    {
      "name": "[parameters('ApplicationGateway_name')]",
      "type": "Microsoft.Network/applicationGateways",
      "apiVersion": "2019-06-01",

      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('ApplicationGateway_name'), parameters('agwVirtualNetwork2Subnet1Name'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('PublicIPAddresses_name'))]"
      ],
      "properties": {
        "sku": {
          "name": "Standard_Small",
          "tier": "Standard",
          "capacity": 2
        },
        "gatewayIPConfigurations": [
          {
            "name": "appGatewayIpConfig",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('ApplicationGateway_name'), parameters('agwVirtualNetwork2Subnet1Name'))]"
              }
            }
          }
        ],
        "sslCertificates": [],
        "authenticationCertificates": [],
        "frontendIPConfigurations": [
          {
            "name": "agwVirtualNetwork2-feip",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('PublicIPAddresses_name'))]"
              }
            }
          }
        ],
        "frontendPorts": [
          {
            "name": "agwVirtualNetwork2-feport",
            "properties": {
              "port": 80
            }
          },
          {
            "name": "httpsPort",
            "properties": {
              "port": 443
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "agwVirtualNetwork2-beap",
            "properties": {
              "backendAddresses": []
            }
          }
        ],
        "backendHttpSettingsCollection": [
          {
            "name": "agwVirtualNetwork2-be-htst",
            "properties": {
              "port": 80,
              "protocol": "Http",
              "cookieBasedAffinity": "Disabled",
              "pickHostNameFromBackendAddress": false,
              "requestTimeout": 1
            }
          }
        ],
        "httpListeners": [
          {
            "name": "agwVirtualNetwork2-httplstn",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_ApplicationGateway2_name')), '/frontendIPConfigurations/agwVirtualNetwork2-feip')]"
              },
              "frontendPort": {
                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_ApplicationGateway2_name')), '/frontendPorts/agwVirtualNetwork2-feport')]"
              },
              "protocol": "Http",
              "hostNames": [],
              "requireServerNameIndication": false,
              "customErrorConfigurations": []
            }
          }
        ],
        "urlPathMaps": [],
        "requestRoutingRules": [
          {
            "name": "agwVirtualNetwork2-rqrt",
            "properties": {
              "ruleType": "Basic",
              "httpListener": {
                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_ApplicationGateway2_name')), '/httpListeners/agwVirtualNetwork2-httplstn')]"
              },
              "backendAddressPool": {
                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_ApplicationGateway2_name')), '/backendAddressPools/agwVirtualNetwork2-beap')]"
              },
              "backendHttpSettings": {
                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_ApplicationGateway2_name')), '/backendHttpSettingsCollection/agwVirtualNetwork2-be-htst')]"
              }
            }
          }
        ],
        "probes": [],
        "rewriteRuleSets": [],
        "redirectConfigurations": [],
        "sslPolicy": {
          "disabledSslProtocols": []
        },
        "enableHttp2": false,
        "customErrorConfigurations": []
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "apiVersion": "2019-06-01",
      "name": "[concat(parameters('agwVirtualNetwork_name'), '/peer_AGW-AKS')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('agwVirtualNetwork_name'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_bedrockvnet2_name'))]"
      ],
      "properties": {
        "peeringState": "Connected",
        "remoteVirtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_bedrockvnet2_name'))]"
        },
        "allowVirtualNetworkAccess": false,
        "allowForwardedTraffic": false,
        "allowGatewayTransit": false,
        "useRemoteGateways": false,
        "remoteAddressSpace": {
          "addressPrefixes": [
            "10.10.0.0/16"
          ]
        }
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "apiVersion": "2019-06-01",
      "name": "[concat(parameters('virtualNetworks_bedrockvnet2_name'), '/peer_AKS-AGW')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_bedrockvnet2_name'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('agwVirtualNetwork_name'))]"
      ],
      "properties": {
        "peeringState": "Connected",
        "remoteVirtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('agwVirtualNetwork_name'))]"
        },
        "allowVirtualNetworkAccess": false,
        "allowForwardedTraffic": false,
        "allowGatewayTransit": false,
        "useRemoteGateways": false,
        "remoteAddressSpace": {
          "addressPrefixes": [
            "15.0.0.0/8"
          ]
        }
      }
    }
  ],
  "outputs": {}
}
