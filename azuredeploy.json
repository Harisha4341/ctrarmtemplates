{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "agwvnetName": {
      "type": "string",
      "minLength": 1
    }},
  "variables": {
    "AKSPrefix": "10.0.0.0/16",
    "AKSSubnet1Name": "Subnet-1",
    "AKSSubnet1Prefix": "10.0.0.0/24",
    "AKSSubnet2Name": "Subnet-2",
    "AKSSubnet2Prefix": "10.0.1.0/24",
    "agwvnetPrefix": "10.0.0.0/16",
    "agwvnetSubnet1Name": "Subnet-1",
    "agwvnetSubnet1Prefix": "10.0.0.0/24",
    "agwvnetSubnet2Name": "Subnet-2",
    "agwvnetSubnet2Prefix": "10.0.1.0/24"},
  "resources": [
    {
      "name": "AKS",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "AKS"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('AKSPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('AKSSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('AKSSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('AKSSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('AKSSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "agwvnet",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "agwvnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('agwvnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('agwvnetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('agwvnetSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('agwvnetSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('agwvnetSubnet2Prefix')]"
            }
          }
        ]
      }
    }],
  "outputs": {}
}
